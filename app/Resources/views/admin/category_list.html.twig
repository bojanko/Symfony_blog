{% extends 'admin/page.html.twig' %}

{% block title %}List of categories!{% endblock %}

{% block content %}
{% if categories is empty %}
	<h2>No categories!</h2>
{% else %}
	{% for category in categories %}
		<h1>{{ category.name }}</h1>
		<br />
		<div class="container">
			<div class="row">
				<div class="col-sm">
					<a class="btn btn-info btn-block" href="
					{{ path('edit_category', {'id': category.id}) }}">Edit category</a>
				</div>
				<div class="col-sm mt-3 mt-sm-0">
					<a class="btn btn-info btn-block" href="
					{{ path('delete_category', {'id': category.id}) }}">Delete category</a>
				</div>
			</div>
		</div>
		<hr />
		<br />
	{% endfor %}
	
	<ul class="pagination">
		{% if prev != 0 %}
		<li class="page-item">
			<a class="page-link" href="{{ prev == 1 ? path('admin_categories') :
			path('admin_categories_page', {'page': prev}) }}" aria-label="Previous">
				<span aria-hidden="true">&laquo;</span>
				<span class="sr-only">Previous</span>
			</a>
		</li>
		{% endif %}
		{% if l1 != 0 %}
		<li class="page-item {{active=='l1'?'active':''}}">
			<a class="page-link" href="{{l1 == 1 ? path('admin_categories') :
			path('admin_categories_page', {'page': l1}) }}">{{l1}}</a>
		</li>
		{% endif %}
		{% if l2 != 0 %}
		<li class="page-item {{active=='l2'?'active':''}}">
			<a class="page-link" href="{{ path('admin_categories_page', {'page': l2}) }}">{{l2}}</a>
		</li>
		{% endif %}
		{% if l3 != 0 %}
		<li class="page-item {{active=='l3'?'active':''}}">
			<a class="page-link" href="{{ path('admin_categories_page', {'page': l3}) }}">{{l3}}</a>
		</li>
		{% endif %}
		{% if next != 0 %}
		<li class="page-item">
			<a class="page-link" href="{{ path('admin_categories_page', {'page': next}) }}" aria-label="Next">
				<span aria-hidden="true">&raquo;</span>
				<span class="sr-only">Next</span>
			</a>
		</li>
		{% endif %}
	</ul>
{% endif %}
{% endblock %}

{% block sidebar %}
<h2>List of categories</h2>
<p>List of every category on this blog is shown here. You can choose to edit or delete category.</p>
{% endblock %}